<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image111"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img1" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riya Tyagi"
                android:layout_toRightOf="@+id/image111"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_missedcall"
                android:text="Today, 8:44 am"
                android:layout_toRightOf="@+id/image111"
                android:layout_marginTop="60dp"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ii"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tv222"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call"
                android:layout_toRightOf="@+id/ii"
                android:layout_marginTop="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />




    </RelativeLayout>
</RelativeLayout>